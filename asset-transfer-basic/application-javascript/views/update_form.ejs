<h1 class="title">
    Update Asset
</h1>
<%if(errors.length > 0) {%>
    <div class="alert alert-danger">
        <%=errors%>
    </div>
<%}%>
<%if(success.length > 0) {%>
    <div class="alert alert-success">
        <%=success%>
    </div>
<%}%>
<%# To check server-side validations, remove needs-validation class temporarily%>

<div class="form-center">
    <form action="/update_asset" method="POST" class="needs-validation col-6" style="padding-left: 70px; font-size: 20px;" novalidate>
        <div class="form-group">
            <label class="form-label">ID</label>
            <input type="text" class="form-control" name="id" required placeholder="Id">
            <div class="invalid-feedback">
                Please enter asset id
            </div>
        </div>
        <div class="form-group">
            <label>Color</label>
            <input type="text" class="form-control" name="color" required placeholder="Color">
            <div class="invalid-feedback">
                Please enter color
            </div>
        </div>
        <div class="form-group">
            <label>Size</label>
            <input type="text" class="form-control" name="size" required placeholder="Size">
            <div class="invalid-feedback">
                Please enter size
            </div>
        </div>
        <div class="form-group">
            <label>Appraised Value</label>
            <input type="text" class="form-control" name="value" required placeholder="Appraised Value">
            <div class="invalid-feedback">
                Please enter asset value
            </div>
        </div>
        <div class="form-group">
            <label>Upload File</label>
            <input type="file" class="form-control" name="file" required placeholder="Upload File...">
            <div class="invalid-feedback">
                Please select an image file for the asset
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary col-md-12" value="Update Asset">
        </div>
    </form>
</div>



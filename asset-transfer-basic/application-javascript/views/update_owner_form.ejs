<h1 class="title">
    New Owner Info
</h1>
<%if(errors.length > 0) {%>
    <div class="alert alert-danger">
        <%=errors%>
    </div>
<%}%>
<%if(success.length > 0) {%>
    <div class="alert alert-success">
        <%=success%>
    </div>
<%}%>
<%# To check server-side validations, remove needs-validation class temporarily%>
<div class="form-center">
    <form action="/update_owner" method="POST" class="needs-validation col-6" style="margin-bottom: 10px; padding-left: 70px; font-size: 20px;" novalidate>
        <div class="form-group">
            <label>Asset ID</label>
            <input type="text" class="form-control" name="id" required placeholder="Asset Id">
            <div class="invalid-feedback">
                Please enter asset id
            </div>
        </div>
        <div class="form-group">
            <label>New Owner Name</label>
            <input type="text" class="form-control" name="newowner" required placeholder="New Owner Name">
            <div class="invalid-feedback">
                Please enter new owner name
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary col-md-12" value="Update Owner">
        </div>
    </form>
</div>

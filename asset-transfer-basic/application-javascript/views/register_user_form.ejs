<h1 class="title">
    Register New User
</h1>
<%if(errors.length > 0) {%>
    <% for (var i=0; i < errors.length; i++) {%>
        <div class="alert alert-danger">
            <%=errors[i]%>
        </div>
    <%}%>
<%}%>

<%if(success.length > 0) {%>
    <div class="alert alert-success">
        <%=success%>
    </div>
<%}%>
<%# To check server-side validations, remove needs-validation class temporarily%>
<div class="form-center">
    <form action="/register_user" method="POST" class="needs-validation col-6" style="margin-bottom: 10px; padding-left: 70px; font-size: 20px;" novalidate>
        <div class="form-group">
            <label>User ID</label>
            <input type="text" class="form-control" name="userId" required placeholder="User Id">
            <div class="invalid-feedback">
                Please enter user id
            </div>
            <select class="form-control" name="role" id="role" style="margin-top: 10px;">
                <option value="creator">Creator</option>
                <option value="reader">Reader</option>
            </select>
            <div class="invalid-feedback">
                Please select a role for the user
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary col-md-12" value="Register User">
        </div>
    </form>
</div>

<h1 class="title">
    Sign In
</h1>
<%if(errors.length > 0) {%>
    <div class="alert alert-danger">
        <%=errors%>
    </div>
<%}%>
<div class="form-center">
    <form action="/login_form" method="POST" class="needs-validation col-6" style="padding-left: 70px; font-size: 20px; margin-bottom: 50px;" novalidate>
        <div class="form-group">
            <input type="text" class="form-control" name="userId" required placeholder="User Id">
            <div class="invalid-feedback">
                Please enter your id
            </div>
            <input type="text" class="form-control" name="pw" required placeholder="Password" style="margin-top: 10px;">
            <div class="invalid-feedback">
                Please enter your password
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary col-md-12" value="Sign In">
        </div>
    </form>
</div>